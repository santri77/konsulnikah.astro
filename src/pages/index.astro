--- 
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import BlogList from '../components/BlogList.astro';
import services from '../data/services.json';
---
<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>KonsulNikah â€” Layanan Konsultasi Pernikahan</title>
    <link rel="stylesheet" href="/styles/main.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <Navbar />
    <header class="hero">
      <div class="container text-center">
        <h1 class="display-5">Membimbing menuju rumah tangga <span class="highlight">sakinah</span></h1>
        <p class="lead text-muted">Pendampingan konsultasi pra-nikah, pasca-nikah, dan bimbingan keluarga.</p>
        <div class="mt-4">
          <a class="btn btn-lg btn-success me-2" href="/consult">Mulai Konsultasi</a>
          <a href="#contact" class="btn btn-outline-secondary">Hubungi Kami</a>
        </div>
      </div>
    </header>

    <main class="container py-5">
      <section id="about" class="mb-5">
        <div class="row align-items-center">
          <div class="col-md-6">
            <h2>Tentang Kami</h2>
            <p class="text-muted">KonsulNikah menyediakan layanan konsultasi pernikahan berbasis bimbingan agama dan psikologis.</p>
          </div>
          <div class="col-md-6 text-center">
            <img src="/assets/logo.svg" alt="KonsulNikah" style="max-width:260px;">
          </div>
        </div>
      </section>

      <section id="services" class="mb-5">
        <h3 class="mb-3">Layanan Kami</h3>
        <div class="row g-3">
          {services.services.map(service => (
            <div class="col-md-4">
              <div class="card h-100 shadow-sm">
                <div class="card-body">
                  <h5 class="card-title">{service.title}</h5>
                  <p class="card-text text-muted">{service.desc}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section id="blog" class="mb-5">
        <h3 class="mb-3">Artikel Terbaru</h3>
        <BlogList />
      </section>

      <section id="contact" class="mb-5">
        <h3 class="mb-3">Kontak</h3>
        <p>Email: <a href="mailto:info@konsulnikah.or.id">info@konsulnikah.or.id</a></p>
      </section>
    </main>

    <Footer />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
